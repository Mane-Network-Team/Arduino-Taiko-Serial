<Page x:Class="Mane_Taiko.P_Error"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Mane_Taiko"
      mc:Ignorable="d" Background="{DynamicResource MahApps.Brushes.WindowTitle}"
      d:DesignHeight="250" d:DesignWidth="450"
      Title="P_Error">

    <Grid Width="450" Height="250" >
        <StackPanel Margin="10 0 0 0">
            <Label Content=":(" FontSize="50" Foreground="White"></Label>
            <Label Margin="0 -5 0 0" Content="{DynamicResource Mane.Error.Title}" HorizontalAlignment="Left" FontSize="25" Foreground="WhiteSmoke"></Label>
            <TextBlock Margin="5 0 10 0" FontSize="14" Text="{DynamicResource Mane.Error.body}" Foreground="White" TextWrapping="Wrap" TextAlignment="Justify" ></TextBlock>
            
            <Button Click="Button_Click" Margin="5 10 0 10" BorderBrush="White" BorderThickness="1" Background="{DynamicResource MahApps.Brushes.WindowTitle}" 
                    HorizontalAlignment="Left" Content="{DynamicResource Mane.Error.reset}" Width="100" Height="30" Style="{StaticResource MahApps.Styles.Button.Square.Accent}"></Button>
        </StackPanel>
    </Grid>
</Page>
