<Page x:Class="Mane_Taiko.S_About"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Mane_Taiko"
      mc:Ignorable="d" Background="{DynamicResource MahApps.Brushes.WindowTitle}"
      d:DesignHeight="160" d:DesignWidth="400" 
      Title="S_Key">

    <Grid Width="400" Height="160" >
        <StackPanel>
            <TextBlock Foreground="White" Text="{DynamicResource Mane.Setting.About.Note}"
                  TextAlignment="Justify" TextWrapping="Wrap" >
            </TextBlock>
            <Label Foreground="White" Content="{DynamicResource Mane.Setting.About.NOSELL}"></Label>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Label Foreground="White" Content="{DynamicResource Mane.Setting.About.Http}" MouseDown="Label_MouseDown_1" Cursor="Hand"></Label>
                <Label Foreground="White" Content="{DynamicResource Mane.Setting.About.Blog}" MouseDown="Label_MouseDown"  Cursor="Hand"></Label>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
